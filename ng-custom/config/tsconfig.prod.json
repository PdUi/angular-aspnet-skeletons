{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es2015",
        "typeRoots" : [
            "./node_modules/@types"
        ],
        "lib": [
            "es2016",
            "dom"
        ],
        "outDir": "../aot/src"
    },
    "files": [
        "../src/app/app.module.ts",
        "../src/main.ts"
    ],
    "angularCompilerOptions": {
        "genDir": "../aot",
        "skipMetadataEmit" : true
    }
}