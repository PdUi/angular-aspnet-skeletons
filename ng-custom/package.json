{
  "name": "ng-custom",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "lint": "tslint -c config/tslint.json src/**/*.ts",

    "prebuild": "node build/clean.js && gulp --gulpfile ./semantic/gulpfile.js build",
    "build:dev": "npm run prebuild && webpack --config ./config/webpack.dev.js",
    "serve:dev": "npm run build:dev && webpack-dev-server --config ./config/webpack.dev.js",

    "prebuild:prod": "npm run prebuild && nsp check  && npm run lint && node build/prebuild.prod.js",
    "build:prod": "ngc -p aot/tsconfig.aot.json && rollup -c config/rollup-config.js && node build/postbuild.prod.js",
    "serve:prod": "npm run build:prod && browser-sync start --server aot/dist --port 8080"
  },
  "author": "Peineary Development",
  "license": "MIT",
  "devDependencies": {
    "@angular/cli": "^1.0.0",
    "@angular/compiler-cli": "^4.0.3",
    "@types/node": "^7.0.13",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^3.1.2",
    "browser-sync": "^2.18.8",
    "codelyzer": "^3.0.0",
    "css-loader": "^0.28.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.28.0",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "nsp": "^2.6.3",
    "null-loader": "^0.1.1",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.1",
    "rollup": "^0.41.6",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-hash": "^1.2.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-uglify": "^1.0.2",
    "semantic-ui": "^2.2.10",
    "style-loader": "^0.16.1",
    "tslint": "^5.1.0",
    "typescript": "^2.2.2",
    "uglify-js": "git://github.com/mishoo/UglifyJS2.git#harmony",
    "webpack": "^2.4.1",
    "webpack-dev-server": "^2.4.2",
    "webpack-merge": "^4.1.0"
  },
  "dependencies": {
    "@angular/common": "^4.0.3",
    "@angular/compiler": "^4.0.3",
    "@angular/core": "^4.0.3",
    "@angular/platform-browser": "^4.0.3",
    "@angular/platform-browser-dynamic": "^4.0.3",
    "@angular/router": "^4.0.3",
    "core-js": "^2.4.1",
    "rxjs": "^5.3.0",
    "zone.js": "^0.8.5"
  }
}
